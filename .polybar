main mainactive second inactivetext bg
2 7 15 8 0

[colors]
primary = ${xrdb:color2}
bold = ${xrdb:color7}
second = ${xrdb:color15}
inactive = ${xrdb:color8}
bg = ${xrdb:color0}
urgent = ${xrdb:color9}

[bar/mainbar]
bottom = true
width = 100%
height = 25
background = ${colors.bg}
foreground = ${colors.second}
;radius = 10.0
line-size = 1
line-color = ${colors.primary}
;border-size = 3
;border-color = ${colors.primary}
font-0 = Source Sans Pro:size=12
font-1 = Source Sans Pro:bold:size=12
font-2 = FontAwesome:size=10
fixed-center = false
tray-position = right
tray-maxsize = 19

modules-left = i3
modules-center = title
modules-right = battery date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
pin-workspaces = true
;strip-wsnumbers = true
;index-sort = true
;reverse-scroll = false

label-focused-foreground = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused-foreground = ${colors.second}
label-unfocused-padding = 2
label-visible-underline = ${colors.second}
label-visible-padding = 2

label-urgent-foreground = ${colors.urgent}
label-urgent-padding = 2


[module/title]
type = internal/xwindow
;format-background = #f00
format-foreground = ${colors.second}
format-padding = 5
; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 75
label-font = 2


[module/date]
type = internal/date
interval = 1.0
date = %a, %e %b
time = %H:%M
label = %date% %time%


[module/battery]
type = internal/battery
full-at = 100
battery = BAT1
adapter = ACAD
poll-interval = 5
