git clone https://aur.archlinux.org/pacaur.git
cd pacaur
sudo pacman -S expac yajl git --noconfirm --needed
if [ ! -n "$(pacman -Qs cower)" ]; then
    git clone https://aur.archlinux.org/cower.git
    cd cower
    makepkg --skippgpcheck --install --needed
    cd ..
fi
makepkg -i
cd ..
rm -rf pacaur
