COMMAND="pacman"
if pacman -Qsq pacaur ; then
	COMMAND="pacaur"
fi
if pacman -Qsq trizen ; then
	COMMAND="trizen --noedit --noinfo --needed"
fi

$COMMAND -S android-tools \
	flex bison \
	gcc gcc-fortran valgrind \
	jdk8-openjdk \
	qemu \
	racket racket-docs \
	swi-prolog \
	wireshark-gtk \
	octave \
	nodejs electron \
	python python2 \
	python-scikit-learn \
	python-matplotlib \
	opencv \
	python-nltk
	
sudo gpasswd -a $USER wireshark
