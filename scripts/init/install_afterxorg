echo "Installing xorg..."
pacaur -S xorg-server
echo "Installing lightdm..."
pacaur -S lightdm lightdm-webkit2-greeter lightdm-webkit-theme-litarvan
echo "Configuring lightdm..."
sudo nano /etc/lightdm/lightdm.conf
sudo nano /etc/lightdm/lightdm-webkit2-greeter.conf
sudo systemctl enable lightdm.service
echo "Installing i3..."
pacaur -S i3-wm i3pystatus-git
echo "Installing pulseaudio..."
pacaur -S pulseaudio pulseaudio-bluetooth pulseaudio-alsa alsa-utils
echo "Installing misc..."
pacaur -S nautilus dunst clipit leafpad viewnior vlc playerctl filemanager-actions libinput-gestures compton
