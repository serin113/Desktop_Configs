COMMAND="pacman"
if pacman -Qsq pacaur ; then
	COMMAND="pacaur"
fi
if pacman -Qsq trizen ; then
	COMMAND="trizen --noedit"
fi

echo "Installing background services..."
$COMMAND -S clipit libinput-gestures rofi polkit-gnome --needed

echo "Installing terminal utilities..."
$COMMAND -S playerctl htop xorg-xinput xorg-xev tldr --needed

echo "Installing nautilus..."
$COMMAND -S nautilus filemanager-actions file-roller --needed

echo "Installing seahorse..."
$COMMAND -S seahorse seahorse-nautilus --needed

echo "Installing display utilities..."
$COMMAND -S dunst compton xorg-xrandr arandr xorg-xdpyinfo \
unclutter-xfixes-git redshift nitrogen \
python-pywal gnome-font-viewer --needed
$COMMAND -S python-xdg --asdeps --needed

echo "Installing pkgbrowser..."
$COMMAND -S pkgbrowser --needed

echo "Installing internet utilities..."
$COMMAND -S reflector synergy vivaldi transmission-gtk --needed
$COMMAND -S qt5-base --asdeps --needed

echo "Installing gtk themes..."
$COMMAND -S oomox lxappearance-gtk3 capitaine-cursors \
adapta-gtk-theme la-capitaine-icon-theme-git --needed

echo "Installing tools..."
$COMMAND -S leafpad gedit xfce4-terminal gnome-calculator \
simplenote-electron-bin atom-editor-bin gnome-clocks --needed
export EDITOR="$(if [[ -n $DISPLAY ]]; then echo 'leafpad'; else echo 'nano'; fi)"
export VISUAL="$(if [[ -n $DISPLAY ]]; then echo 'gedit'; else echo 'nano'; fi)"

echo "Installing cups..."
$COMMAND -S cups cups-pdf avahi --needed
sudo systemctl enable org.cups.cupsd.service
sudo systemctl enable avahi-daemon.service
sudo systemctl start org.cups.cupsd.service
sudo usermod -aG lp $(whoami)
sudo usermod -aG sys $(whoami)
$COMMAND -S hplip --needed
sudo systemctl restart org.cups.cupsd.service

echo "Installing media applications..."
$COMMAND -S viewnior vlc spotify --needed
$COMMAND -S ffmpeg0.10 zenity --asdeps --needed
